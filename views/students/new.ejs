<%- include ../partials/header %>
    <div class="container">
        <div class="page-header">
            <h1>Add Student</h1>
        </div>
        <form action="/students" method="POST">
            
            <div class="form-group">
                <input type="text" class="form-control" name="student[firstName]" placeholder="First name" required autofocus>
            </div>
            <div class="form-group">
                <input type="text" class="form-control" name="student[lastName]" placeholder="Last name" required>
            </div>
            <div class="form-group">
                <input type="text" class="form-control" name="student[school]" placeholder="School" required>
            </div>
            <div class="form-group">
                <input type="number" class="form-control" name="student[grade]" placeholder="Grade" required>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
        <hr>
        <a href="/students">Go back</a>
    </div>
<%- include ../partials/footer %>