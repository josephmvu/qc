<%- include ../partials/header %>
    <div class="container">
        <div class="page-header">
            <h1>Edit <a href="/students/<%= student.id %>"><%= student.firstName + ' ' + student.lastName %></a></h1>
        </div>
        
        <form action="/students/<%= student.id %>?_method=PUT" method="POST">
            <div class="form-group">
                <input type="text" class="form-control" name="student[firstName]" value="<%= student.firstName %>" placeholder="first" required>
            </div>
            <div class="form-group">
                <input type="text" class="form-control" name="student[lastName]" value="<%= student.lastName %>" placeholder="last" required>
            </div>
            <div class="form-group">
                <input type="text" class="form-control" name="student[school]" value="<%= student.school %>" placeholder="school" required>
            </div>
            <div class="form-group">
                <input type="number" class="form-control" name="student[grade]" value="<%= student.grade %>" placeholder="grade" required>
            </div>
            
            <button type="submit" class="btn btn-primary">Update</button>
        </form>
        
        <form action="/students/<%= student.id %>?_method=DELETE" method="POST">
            <button type="submit" class="btn btn-danger">Delete</button>
        </form>
        
        <hr>
        <a href="/students">Go back</a>
    </div>
<%- include ../partials/footer %>